{
  "compilerOptions": {
    "target": "es2016",
    "types": ["node"],
    "moduleResolution": "node",

    "module": "commonjs",
    "rootDir": "./src",

    "allowJs": true,

    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,

    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "src/*": ["*", "./src/*"]
    },
    "lib": ["dom", "es5", "es6", "es2021"]
  },
  "include": ["./src/"],
  "exclude": ["./dist/"]
}
